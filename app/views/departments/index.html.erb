<div class="d-flex justify-content-center align-item-center">
    <table>
        <tr>
            <th class="p-2">Id</th>
            <th class="p-2">Name</th>
        </tr>
        <% @departments.each do |d| %>
        <tr>
            <td class="p-2">
                <%= d.id %>
            </td>
            <td class="p-2">
                <%= d.name %>
            </td>
        </tr>
        <% end %>
    </table>
</div>